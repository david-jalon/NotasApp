<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NotasApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Tema de la aplicación en modo Día -->
    <style name="Theme.NotasApp.Day" parent="Theme.Material3.Light.NoActionBar">

        <!-- Colores principales -->
        <item name="colorPrimary">@color/day_primary</item>
        <item name="colorOnPrimary">@color/day_on_primary</item>

        <item name="colorSecondary">@color/day_secondary</item>
        <item name="colorOnSecondary">@color/day_on_secondary</item>

        <item name="colorTertiary">@color/day_tertiary</item>
        <item name="colorOnTertiary">@color/day_on_tertiary</item>

        <!-- Fondo -->
        <item name="android:colorBackground">@color/day_background</item>
        <item name="colorOnBackground">@color/day_on_background</item>

        <!-- MaterialCardView, BottomBar, etc -->
        <item name="colorSurface">@color/day_surface</item>
        <item name="colorOnSurface">@color/day_on_surface</item>

        <!-- Status bar y navegación -->
        <item name="android:statusBarColor">@color/day_primary</item>
        <item name="android:navigationBarColor">@color/day_primary</item>

        <!-- Estilo de MaterialButton -->
        <item name="materialButtonStyle">@style/DayButtonStyle</item>
    </style>


    <!-- Estilo personalizado para MaterialButton -->
    <style name="DayButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/day_primary</item>
        <item name="android:textColor">@color/day_on_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>


    <!-- Tema de la app en modo Noche -->
    <style name="Theme.MyApp.Night" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Colores principales -->
        <item name="colorPrimary">@color/night_primary</item>
        <item name="colorOnPrimary">@color/night_on_primary</item>

        <item name="colorSecondary">@color/night_secondary</item>
        <item name="colorOnSecondary">@color/night_on_secondary</item>

        <item name="colorTertiary">@color/night_tertiary</item>
        <item name="colorOnTertiary">@color/night_on_tertiary</item>

        <!-- Fondo -->
        <item name="android:colorBackground">@color/night_background</item>
        <item name="colorOnBackground">@color/night_on_background</item>

        <!-- Superficies (tarjetas, barras, etc.) -->
        <item name="colorSurface">@color/night_surface</item>
        <item name="colorOnSurface">@color/night_on_surface</item>

        <!-- Status bar y navegación -->
        <item name="android:statusBarColor">@color/night_primary</item>
        <item name="android:navigationBarColor">@color/night_primary</item>

        <!-- Estilo de MaterialButton -->
        <item name="materialButtonStyle">@style/NightButtonStyle</item>

    </style>


    <!-- Estilo personalizado para botones -->
    <style name="NightButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/night_primary</item>
        <item name="android:textColor">@color/night_on_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>


    <style name="Theme.NotasApp" parent="Base.Theme.NotasApp" />
</resources>